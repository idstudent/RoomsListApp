<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="22dp"
    android:layout_marginBottom="7dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A286D3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:text="제목"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:0.5"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/title_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/rank_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="평점"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/rank_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toTopOf="@id/rank_title"
            app:layout_constraintBottom_toBottomOf="@id/rank_title"
            app:layout_constraintStart_toEndOf="@+id/rank_title"/>
        <TextView
            android:id="@+id/add_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록시간"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/rank_title"
            app:layout_constraintLeft_toLeftOf="@+id/rank_title"/>
        <TextView
            android:id="@+id/add_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/add_time_title"
            app:layout_constraintBottom_toBottomOf="@id/add_time_title"
            app:layout_constraintStart_toEndOf="@+id/add_time_title"/>
        <ImageView
            android:id="@+id/btn_remember_off"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            android:backgroundTint="#F40808"
            android:background="@drawable/ic_baseline_favorite_border_24"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@id/rank_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/rank_title"/>
        <ImageView
            android:id="@+id/btn_remember_on"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            android:visibility="gone"
            android:backgroundTint="#F40808"
            android:background="@drawable/ic_baseline_favorite_24"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@id/rank_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/rank_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
