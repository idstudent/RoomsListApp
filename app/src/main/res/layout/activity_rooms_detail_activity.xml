<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="detailInfo"
            type="com.example.hotellistapp.model.ProductInfos" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.RoomsDetailActivity">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{detailInfo.title}"
            tools:text="제목"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/roomsImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="center"
            app:detailImageUrl="@{detailInfo.thumbnail}"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/rank_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="1:1"
            app:tint="#FFEB3B"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/roomsImg"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/rank_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(detailInfo.rate)}"
            app:layout_constraintTop_toTopOf="@id/rank_img"
            app:layout_constraintBottom_toBottomOf="@id/rank_img"
            app:layout_constraintStart_toEndOf="@+id/rank_img"/>
        <ImageView
            android:id="@+id/btn_remember_off"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="1:1"
            android:backgroundTint="#F40808"
            android:background="@drawable/ic_baseline_favorite_border_24"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/rank_img"
            app:layout_constraintBottom_toBottomOf="@+id/rank_img"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageView
            android:id="@+id/btn_remember_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintDimensionRatio="1:1"
            android:visibility="gone"
            android:backgroundTint="#F40808"
            android:background="@drawable/ic_baseline_favorite_24"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/rank_img"
            app:layout_constraintBottom_toBottomOf="@+id/rank_img"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/explain_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{detailInfo.subject}"
            tools:text="설명"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rank_img"
            app:layout_constraintLeft_toLeftOf="@+id/rank_img"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(detailInfo.price)}"
            tools:text="가격"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/explain_text"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>